		entity="entGadget">
		<bootstrap thing="abOpenClos"/>
		<bootstrap thing="abRestrict">
			<assignval field="domDomain" value="Cannot open Deadlock Seals"/>
		</bootstrap>
	</child>	
    </thing>

  <!-- Engineer’s Mate Gadget -->
  <thing
    id="gaEngMate"
    name="Engineer's Mate"
    compset="Gadget"
    isunique="yes"
    description="An electronic and futuristic swiss army knife of the tech world. Able to diagnose tech problems and helps the user to try and fix it.">
	<tag group="Gadget" tag="Minor"/>
	<child
		entity="entGadget">
		<bootstrap thing="abScan"/>
		<bootstrap thing="abRestrict">
			<assignval field="domDomain" value="Scans technological items only"/>
		</bootstrap>
		<bootstrap thing="abTechAd">
			<autotag group="Helper" tag="Shadow"/>
		</bootstrap>
	</child>	
    </thing>

  <!-- Engram Eraser Gadget -->
  <thing
    id="gaEngramEr"
    name="Engram Eraser"
    compset="Gadget"
    isunique="yes"
    description="As used by some governments to erase memories of witnesses to extraterrestrial incidents.">
	<tag group="Gadget" tag="Major"/>
	<child
		entity="entGadget">
		<bootstrap thing="abDelete"/>
		<bootstrap thing="abRestrict">
			<assignval field="domDomain" value="Delete function only works on memories"/>
		</bootstrap>
		<bootstrap thing="abPsychic">
			<!-- Cost on this trait is usually controlled by Psychic Training pick -->
			<autotag group="CPCost" tag="1"/>
		</bootstrap>
	</child>	
    </thing>

  <!-- Psychic Paper Gadget -->
  <thing
    id="gaPsyPaper"
    name="Psychic Paper"
    compset="Gadget"
    isunique="yes"
    description="As used by some governments to erase memories of witnesses to extraterrestrial incidents.">
	<tag group="Gadget" tag="Minor"/>
	<child
		entity="entGadget">
		<bootstrap thing="abPsychic">
			<!-- Cost on this trait is usually controlled by Psychic Training pick -->
			<autotag group="CPCost" tag="2"/>
		</bootstrap>		
		<bootstrap thing="abRestrict">
			<assignval field="domDomain" value="Doesn't work on the psychically trained"/>
		</bootstrap>
	</child>	
    </thing>

  <!-- Vortex Manipulator Gadget -->
  <thing
    id="gaVortex"
    name="Vortex Manipulator"
    compset="Gadget"
    isunique="yes"
    description="As used by 51st Century Time Agents. This version (bottom right) is not usually for player characters and costs 10 Story Points, more than double that of a normal Special Gadget, as its time jumping abilities are fully working. The Gamemaster may design a game around a group of characters whose only transport is with one of these, at which point the Gadget is 'free', like a TARDIS. See Chapter Four: A Big Ball of Timey-Wimey Stuff. Jack’s Vortex Manipulator is a Major Gadget version, without the Vortex Trait (though it can be activated for short periods if the story warrants it, with expenditure of Story Points).">
	<tag group="Gadget" tag="Special"/>
	<tag group="StoryPen" tag="10"/>
	<child
		entity="entGadget">
		<bootstrap thing="abVortex">
		</bootstrap>		
		<bootstrap thing="abRestrict">
			<assignval field="domDomain" value="Short Temporal Jumps only"/>
		</bootstrap>
		<bootstrap thing="abScan"/>
		<bootstrap thing="abTransmit"/>
		<bootstrap thing="abTeleport"/>
	</child>	
    </thing>

  <!-- Superphone Gadget -->
  <thing
    id="gaSuperPh"
    name="Superphone"
    compset="Gadget"
    isunique="yes"
    description="">
	<tag group="Gadget" tag="Minor"/>
	<child
		entity="entGadget">
		<bootstrap thing="abRestrict">
			<assignval field="domDomain" value="only communicates with home time period"/>
		</bootstrap>
		<bootstrap thing="abTransmit"/>
	</child>	
    </thing>
  </document>
