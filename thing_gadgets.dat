    id="GadgetInfo"
    name="Gadget Info Thing"
    compset="GadgetInfo"
    isunique="yes"
    description="Description goes here">
    </thing>

  <!-- Custom Gadget -->
  <thing
    id="gaCustGad"
    name="&#150; Custom Gadget &#150;"
    compset="Gadget"
    isunique="no"
    description="Description goes here">
    <tag group="Helper" tag="CustomItem"/>
	<child
		entity="entGadget">
	</child>	
    </thing>

  <!-- 51st Century “Squareness Gun” Gadget -->
  <thing
    id="gaSquare"
    name="51st Century 'Squareness Gun'"
    compset="Gadget"
    isunique="yes"
    description="Handy gun that deletes and restores walls and other items digitally, as used by River Song and Capt. Jack.">
	<tag group="Gadget" tag="Major"/>
	<child
		entity="entGadget">
		<bootstrap thing="abDelete"/>
		<bootstrap thing="abRestrict">
			<assignval field="domDomain" value="Doesn't work on living tissue"/>
		</bootstrap>
	</child>	
    </thing>

