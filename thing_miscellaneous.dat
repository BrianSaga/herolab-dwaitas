  <!-- Character point resource to track the pool of character points being spent on gadgets -->
  <thing
    id="resGadCP"
    name="Gadget Build Points"
    compset="Resource">

    <!-- Use the starting character points as our initial maximum -->
    <eval index="1" phase="Setup" priority="2000"><![CDATA[
			var val as number
			val = 0
			if (parent.isgizmo <> 0) then
				val = parent.gizmo.childfound[GadgetInfo].field[gdtCP].value
			endif
			field[resMax].value = val
  	  ]]></eval>
	</thing>
	
  <!-- Story point resource to track the pool of story points stored on gadgets -->
  <thing
    id="resGadStor"
    name="Gadget Story Points"
    compset="Resource">

    <!-- Use the starting character points as our initial maximum -->
    <eval index="1" phase="Setup" priority="2000"><![CDATA[
			var val as number
			val = 0
			if (parent.isgizmo <> 0) then
				val = parent.gizmo.childfound[GadgetInfo].field[gdtCP].value
			endif
			field[resMax].value = val
  	  ]]></eval>
    </thing>

  <!-- Character point resource to track the pool of character points being spent -->
  <thing
    id="resCP"
    name="Hero Character Points"
    compset="Resource">

    <!-- Automatically add the resource to every actor -->
    <tag group="Helper" tag="Bootstrap"/>

    <!-- Use the starting character points as our initial maximum -->
    <eval index="1" phase="Setup" priority="1000"><![CDATA[
      field[resMax].value = herofield[acStartCP].value
      ]]></eval>
    </thing>

	<!-- Skill point resource to track the pool of skill points being spent -->
  <thing
    id="resSP"
    name="Hero Skill Points"
    compset="Resource">

    <!-- Automatically add the resource to every actor -->
    <tag group="Helper" tag="Bootstrap"/>

    <!-- Use the starting character points as our initial maximum -->
    <eval index="1" phase="Setup" priority="1000"><![CDATA[
      field[resMax].value = herofield[acStartSP].value
      ]]></eval>
    </thing>


  <!-- Story Point resource to track the pool of story points being spent -->
  <thing
    id="resStory"
    name="Hero Story Points"
    compset="Resource">
    <fieldval field="resObject" value="Ability"/>

    <!-- Automatically add the resource to every actor -->
    <tag group="Helper" tag="Bootstrap"/>
	
	<!-- Do not need to spend this down -->
    <tag group="Helper" tag="NoMinimum"/>

    <!-- Use the starting ability slots as our initial maximum -->
    <eval index="1" phase="Setup" priority="1000"><![CDATA[
      field[resMax].value = herofield[acStartSty].value
      ]]></eval>
    </thing>


  <!-- Experience points resource to track the pool of XP accrued and spent -->
  <thing
    id="resXP"
    name="Hero Experience Points"
    compset="Resource">

    <!-- Automatically add the resource to every actor -->
    <tag group="Helper" tag="Bootstrap"/>

    <!-- Do NOT require this resource to be fully utilized -->
    <tag group="Helper" tag="NoMinimum"/>

    <!-- Use the starting XP plus the accrued XP as our maximum -->
    <eval index="1" phase="Setup" priority="1000" name="Calc XP Max"><![CDATA[
      field[resMax].value = herofield[acStartXP].value + hero.usagepool[TotalXP].value
      ]]></eval>
    </thing>


  <!-- Advance resource to track the number of advances accrued/spent -->
  <thing
    id="resAdvance"
    name="Advances"
    compset="Resource"
    panellink="advances">
    <fieldval field="resObject" value="Advance"/>

    <!-- Automatically add the resource to every actor -->
    <tag group="Helper" tag="Bootstrap"/>

    <!-- Base our maximum on the accrued XP -->
    <eval index="1" phase="Setup" priority="2000">
      <after name="Calc XP Max"/><![CDATA[
      field[resMax].value = round(#resmax[resXP] / 20,0,-1)
      ]]></eval>

    </thing>


  <!-- Story points tracker so the user can manage the expenditure of story points -->
  <thing
    id="trkStory"
    name="Hero Story Points Tracker"
    compset="Tracker">

    <!-- Automatically add the tracker to every actor -->
    <tag group="Helper" tag="Bootstrap"/>

    <!-- Resetting the tracker sets the value to the maximum 
    <tag group="Helper" tag="ResetMax"/>
	-->
	
    <!-- Use the starting story points as our initial maximum -->
    <eval index="1" phase="Final" priority="1000"><![CDATA[
      field[trkMin].value = 0
      field[trkMax].value = #resmax[resStory]
	  
	  ~set up tracker to adjust resource
	  #resleft[resStory] = field[trkMax].value + field[trkLeft].value
      ]]></eval>
    </thing>

  <!-- Story points tracker for gadgets -->
  <thing
    id="trkGadStor"
    name="Gadget Story Points Tracker"
    compset="Tracker">

    <!-- Resetting the tracker sets the value to the maximum 
    <tag group="Helper" tag="ResetMax"/>
	-->
	
    <!-- Use the starting story points as our initial maximum -->
    <eval index="1" phase="Final" priority="1000"><![CDATA[
      field[trkMin].value = 0
      field[trkMax].value = parent.gizmo.childfound[resGadStor].field[resMax].value
	  
	  ~set up tracker to adjust resource
	  parent.gizmo.childfound[resGadStor].field[resLeft].value = field[trkMax].value + field[trkLeft].value
      ]]></eval>
    </thing>


